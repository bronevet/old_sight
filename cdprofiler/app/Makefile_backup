include ./../Makefile.extern
SHELL = /bin/sh
.SUFFIXES: .cc .o

LULESH_EXEC   = lulesh_cd_profile
TEST_EXEC     = test_profiler
EXEC_PROFILED = $(LULESH_EXEC)

MPI_INC = /opt/local/include/openmpi
MPI_LIB = /opt/local/lib

SERCXX   = g++ -DUSE_MPI=0 -DCDNODE_VIZ=1
MPICXX   = mpic++ -DUSE_MPI=1
CXX      = $(SERCXX)
CXXFLAGS = -g -std=gnu++11 -openmp -I${SILO_INCDIR} -Wall -Wno-pragmas ${SIGHT_CFLAGS} ${CD_PROFILER_CFLAGS}
LDFLAGS  = ${SIGHT_LDFLAGS} ${SIGHT_LINKFLAGS} ${CD_PROFILER_LINKFLAGS}

#SILO_INCDIR = /usr/gapps/silo/current/chaos_5_x86_64/include
#SILO_LIBDIR = /usr/gapps/silo/current/chaos_5_x86_64/lib
#CXXFLAGS    = ${CXXFLAGS} -DVIZ_MESH -I${SILO_INCDIR} 
#LDFLAGS     = ${LDFLAGS} -L${SILO_LIBDIR} -Wl,-rpath -Wl,${SILO_LIBDIR} -lsiloh5 -lhdf5

SOURCE_LULESH = \
	./lulesh_v2/lulesh.cc \
	./lulesh_v2/lulesh-comm.cc \
	./lulesh_v2/lulesh-viz.cc \
	./lulesh_v2/lulesh-util.cc \
	./lulesh_v2/lulesh-init.cc
SOURCE_TEST        = ./test_profiler/test_profiler.cc
SOURCE_CD_PROFILER = ${CD_PROFILER}/lib/cd_profile.cc

OBJECT_LULESH      = $(SOURCE_LULESH:.cc=.o)
OBJECT_TEST        = $(SOURCE_TEST:.cc=.o)
OBJECT_CD_PROFILER = $(SOURCE_CD_PROFILER:.cc=.o)

sight_H :=  ${SIGHT_ROOT}/*.h \
            ${SIGHT_ROOT}/*/*.h \
            ${SIGHT_ROOT}/widgets/*/*.h \
            ${SIGHT_ROOT}/libsight_structure.so

cd_profile_H := ${CD_PROFILER}/lib/cd_profile.h
all_H        := ${sight_H} ${cd_profile_H}

.cc.o: ${all_H} 
	@echo "\nBuilding $<"
	$(CXX) -c $(CXXFLAGS) -o $@ $<

all: $(EXEC_PROFILED)

lulesh_cd_profile: $(OBJECT_LULESH) $(OBJECT_CD_PROFILER)
	@echo "\nLinking"
	$(CXX) -o $@ $^ $(LDFLAGS) -lm

#run: ${EXEC_PROFILED}
#	./$(EXEC_PROFILED) 

test_cd_profile: $(SOURCE_TEST) ${sight_H}
	${CXX} ${CXXFLAGS} $(SOURCE_CD_PROFILER) $(SOURCE_TEST) ${LDFLAGS} -lm -o $@

clean:
	rm -rf ${CD_APP}/lulesh_v2/*.dSYM ./lulesh_v2/*.o
	rm -rf test_cd_profile; rm -rf lulesh_cd_profile;  
	rm -rf ${CD_APP}/dbg*; 
	rm -rf ${CD_APP}/profile_data/*; 
	rm -rf ${CD_PROFILER}/lib/*.o
